<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <me.luzhuo.lib_image_select.ImageSelectView
        android:id="@+id/image1"
        app:image_flags="Images|Videos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:image_is_original="true"
        app:image_show_camera="true"
        app:image_layout_select_add="@layout/my_image_add"
        app:image_layout_select_normal="@layout/my_image_normal"/>

    <me.luzhuo.lib_image_select.ImageSelectView
        android:id="@+id/image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <me.luzhuo.lib_image_select.ImageSelectView
        android:id="@+id/image3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:image_only_show="true"/>

</androidx.appcompat.widget.LinearLayoutCompat>