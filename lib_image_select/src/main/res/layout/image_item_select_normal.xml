<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/image_select_btn"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_margin="7dp"
        android:background="@drawable/ui_rect_99gray_5r_dotted_edge"
        app:cardCornerRadius="5dp"
        app:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_select_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/image_select_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ui_icon_image_select_close" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_select_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:src="@mipmap/ui_icon_image_select_video_play"
        app:layout_constraintBottom_toBottomOf="@+id/image_select_btn"
        app:layout_constraintEnd_toEndOf="@+id/image_select_btn"
        app:layout_constraintStart_toStartOf="@+id/image_select_btn"
        app:layout_constraintTop_toTopOf="@+id/image_select_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>




